{
    "manifest_version": 3,
    "name": "AstroText",
    "version": "1.0.0",
    "description": "AstroText is an open-source extension to enhance and improve text using AI to support better writing",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://api.openai.com/*"
    ]
} 